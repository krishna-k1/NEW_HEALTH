    <script>
  function updateSelectedSymptoms() {
  // Get all dropdown elements by class name
  const dropdowns = document.querySelectorAll('.dropdown');
  let selectedSymptoms = [];

  // Loop through each dropdown and collect selected options
  dropdowns.forEach(dropdown => {
    Array.from(dropdown.options).forEach(option => {
      if (option.selected) {
        selectedSymptoms.push(option.text);
      }
    });
  });

  // Display the selected symptoms as comma-separated values in the textarea
  document.getElementById('selectedSymptoms').value = selectedSymptoms.join(', ');
}


